<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ポケモン非公式ガチャ"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="所持ポイント"
            android:textSize="38sp"/>

        <TextView
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="38sp" />

        <Button
            android:onClick="pointget"
            android:id="@+id/pointup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ポイント+100"
            android:textSize="38sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doGacha"
            android:text="ガチャを引く(100p)"
            android:textSize="38sp"
            android:onClick="dogacha"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doRareGacha"
            android:text="レアガチャを引く(300p)"
            android:textSize="38sp"
            android:onClick="doraregacha" />


    </LinearLayout>

</RelativeLayout>